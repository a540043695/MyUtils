<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_item_fenlei_image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/e"
        app:sriv_oval="true"
        app:sriv_left_bottom_corner_radius="30dip"
        app:sriv_left_top_corner_radius="30dip"
        app:sriv_right_bottom_corner_radius="30dip"
        app:sriv_right_top_corner_radius="30dip"></com.joooonho.SelectableRoundedImageView>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tv_item_fenlei_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新片连遭的" />
</LinearLayout>