<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_fldetail_img"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_item_fldetail_biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#080808"
                android:text="标题"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_item_fldetail_zuozhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_fldetail_biaoti"
                android:paddingTop="10dp"
                android:textSize="8dp"
                android:text="作者" />

            <ImageView
                android:id="@+id/iv_item_fldetail_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_fldetail_zuozhe"
                android:paddingTop="15dp"
                android:src="@mipmap/ic_details_toolbar_praise_normal" />

            <TextView
                android:id="@+id/tv_item_fldetail_dzs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_item_fldetail_zan"
                android:paddingLeft="7dp"
                android:layout_below="@id/tv_item_fldetail_zuozhe"
                android:paddingTop="19dp"
                android:textSize="10dp"
                android:text="点赞数" />

            <ImageView
                android:id="@+id/iv_item_fldetail_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_item_fldetail_dzs"
                android:paddingLeft="10dp"
                android:layout_below="@id/tv_item_fldetail_zuozhe"
                android:paddingTop="15dp"
                android:src="@mipmap/ic_home_comment_normal" />

            <TextView
                android:id="@+id/tv_item_fldetail_pls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_item_fldetail_pl"
                android:paddingLeft="10dp"
                android:layout_below="@id/tv_item_fldetail_zuozhe"
                android:paddingTop="19dp"
                android:textSize="10dp"
                android:text="评论数" />

            <Button
                android:id="@+id/bt_item_fldetail_gz"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_me_follow" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>